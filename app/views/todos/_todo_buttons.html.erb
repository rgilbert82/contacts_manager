<%= link_to 'Edit Todo', edit_todo_path, class: 'btn btn-default edit_button todo_button' %>
<% if todo.completed %>
  <%= link_to 'Mark as Incomplete', toggle_todo_path(todo), remote: true, method: :post, class: 'btn btn-default incomplete_button todo_button' %>
<% else %>
  <%= link_to 'Mark as Complete', toggle_todo_path(todo), remote: true, method: :post, class: 'btn btn-default complete_button todo_button' %>
<% end %>
<%= link_to 'Delete Todo', todo,  method: :delete, data: {confirm: 'Are you sure?'}, class: 'btn btn-default delete_button todo_button' %>
